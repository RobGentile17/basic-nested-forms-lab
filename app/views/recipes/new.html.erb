<%= form_for @recipe do |form| %>
  <%= form.label "Recipe title:" %>
  <%= form.text_field :title %>

<%= form.fields_for :ingredients do |inner_form| %>
  <%= inner_form.label :name %>
  <%= inner_form.text_field :name %><br/>

  <%= inner_form.label :quantity %>
  <%= inner_form.text_field :quantity %><br/>
<% end %>

<%= form.submit %>
<% end %>